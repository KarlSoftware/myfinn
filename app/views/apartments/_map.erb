
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.config.google_maps_key %>&sensor=false">
</script>

<script type="text/javascript">

  function drawMap(){
      var latLng =  new google.maps.LatLng(<%= lat %>,<%= lng %>);
      var mapOptions = {
        center: latLng,
        zoom: 13,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
      };
      map = new google.maps.Map(document.getElementById("map-container"), mapOptions);
      var marker = new google.maps.Marker({
        position: latLng,
        map: map,
        icon: '/assets/mapicon.png'
      });
  }

</script>

<div id="map-container" style="width:800px;height:500px;margin-left:auto;margin-right:auto;"></div>
